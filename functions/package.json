{
  "name": "crm-companion-functions",
  "private": true,
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint",
    "serve": "npm run build && firebase emulators:start --only functions",
    "serve:local": "npm run build && node -r dotenv/config ../.env.local firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "dotenv": "^17.2.3",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
